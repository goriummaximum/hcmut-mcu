#include "main.h"
#include "uart_communication_fsm.h"

enum CommandState {
	BEGIN,
	OK,
	RST,
	RETRANSMIT
};

static enum CommandState commandState = BEGIN;

void uart_communication_fsm(void) {
	switch(commandState) {
	case BEGIN:
		if (command_data == "OK") {
			commandState = OK;
		}

		else if (command_data == "RST") {
			commandState = RST;
		}
		break;

	case OK:
		//action

		//transition
		commandState = BEGIN;
		break;

	case RST:

		break;
	}

	case RETRANSMIT:

		break;
}
