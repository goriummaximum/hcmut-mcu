#include "command_parser_fsm.h"
#include "uart_communication_fsm.h"
#include "main.h"
#include "string.h"

enum CharState {
	BEGIN,
	BODY
};

static enum CharState cState = BEGIN;
static char *commandStr = NULL;

void command_parser_fsm(char inputChar) {
	switch (cState) {
	case BEGIN:
		commandStr = NULL;

		if (inputChar == '!') {
			cState = BODY;
		}
		break;

	case BODY:
		if (inputChar == '#') {
			//strcpy(command_data, commandStr);
			sprintf(command_data, "%s\0", commandStr);
			//HAL_UART_Transmit(&huart2, (void *)commandStr, strlen(commandStr), 50);
			if (commandStr == "RST") {
				HAL_UART_Transmit(&huart2, (void *)"hi", 2, 50);
			}
			command_flag = 1;

			cState = BEGIN;
		}

		else {
			sprintf(commandStr, "%s%c", commandStr, inputChar);
		}

		break;
	}
}
