#ifndef __1DARRAY_LED_H
#define __1DARRAY_LED_H

#define NUMBER_OF_LEDS		2
#define NUMBER_OF_VALUES	2
#define GPIO_PORT 	GPIOA

static uint8_t ledArrayBuffer[NUMBER_OF_LEDS];
static uint8_t ledArrayPins[NUMBER_OF_LEDS] = {GPIO_PIN_5, GPIO_PIN_6};
static uint8_t ledArrayEncoder[NUMBER_OF_VALUES] = {GPIO_PIN_SET, GPIO_PIN_RESET}; //idx 0 - SET, idx 1 - RESET
														//0				1

uint8_t ledArrayBuffer_write(uint8_t value);
void ledArrayDriver_write(void);

#endif /* __1DARRAY_LED_H */

