#include "main.h"
#include "1darray_led.h"

uint8_t ledArrayBuffer_write(uint8_t value, uint8_t ledPos) {
	if (ledPos >= NUMBER_OF_LEDS) {
		return 0;
	}

	if (value != 0 && value != 1) {
		return 0;
	}

	ledArrayBuffer[ledPos] = value;

	return 1;
}

void ledArrayDriver_drive(void) {

}
