#include "main.h"
#include "1darray_led.h"

uint8_t ledArrayBuffer_write(uint8_t value) {
	if (value >= NUMBER_OF_LEDS*2) {
		return 0;
	}

	for (uint8_t i = 0; i < NUMBER_OF_LEDS; i++) {
		ledArrayBuffer[i] = (value >> i) & 1; //get the i bit from smallest to highest bit
	}

	return 1;
}

