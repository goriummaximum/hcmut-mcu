#include "scheduler.h"

sTask SCH_tasks_G [SCH_MAX_TASKS];

void SCH_Init(void) {
	unsigned char i;
	for (i = 0; i < SCH_MAX_TASKS; i++) {
		SCH_Delete_Task (i);
	}
	// Reset the global e r ro r v a ri abl e
	// âˆ’ SCH_Delete_Task ( ) will generate an e r ro r code ,
	// ( because the task array i s empty)
	Error_code_G = 0;
	Timer_init () ;
	Watchdog_init() ;
}


